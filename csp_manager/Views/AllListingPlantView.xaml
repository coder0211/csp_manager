                <ComboBoxItem IsSelected="True" >TẤT CẢ</ComboBoxItem>
                <ComboBoxItem>Cây ăn quả</ComboBoxItem>
                <ComboBoxItem>Hoa</ComboBoxItem>

            </ComboBox>
        </Grid>
