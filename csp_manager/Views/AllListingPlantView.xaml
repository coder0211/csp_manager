        <Grid Grid.Row="1">
            <ListView  x:Name="lstAllPlant" Background="Transparent"                
                SelectionChanged="lstAllPlant_SelectionChanged"
                BorderThickness="0,0.5,0.5,0" 
                ScrollViewer.HorizontalScrollBarVisibility="Hidden"            
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                Height="450"
                Margin="0 -50 0 0"
                ScrollViewer.CanContentScroll="False"
                BorderBrush="Transparent" 
                IsHitTestVisible="True">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                        <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                        <Setter Property="Padding" Value="2,0,0,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border Name="Border" Padding="2" SnapsToDevicePixels="true">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="true">
                                            <Setter TargetName="Border" Property="Background"
                                                                Value="lightgray"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <Grid>
                                <Border Height="110" 
                                Width="750"
                                Background="White"   
                                Grid.Row="1"
                                BorderThickness="1"
                                CornerRadius="20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Grid.RowSpan="12"
                                            Width="80"
                                            CornerRadius="12"
                                            Height="80">
                                            <!--<Image Source="{Binding Path=p.plant_img}" />-->
                                            <Grid>
                                                <Rectangle RadiusX="12" RadiusY="12">
                                                    <Rectangle.Fill>
                                                        <ImageBrush x:Name="myImage" ImageSource="{Binding Path=p.plant_img}" Stretch="UniformToFill" />
                                                    </Rectangle.Fill>
                                                </Rectangle>
                                            </Grid>
                                        </Border>
                                        <TextBlock Grid.Column="2" Grid.ColumnSpan="3"
                                            Grid.RowSpan="5"
                                            Text="{Binding Path=p.plant_name}"
                                            FontWeight="Bold"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"                  
                                            Foreground="#5FAF57"
                                            FontSize="20"/>
                                        <TextBlock Grid.Column="2" Grid.ColumnSpan="3"
                                            Grid.Row="4" Grid.RowSpan="3"
                                            Text="Số lượng còn: "
                                            FontWeight="Regular"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Foreground="#000000"
                                            FontSize="16">
                                            <TextBlock
                                                Text="{Binding Path=p.plant_amount}"
                                                FontWeight="DemiBold"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Foreground="#000000"
                                                FontSize="16"/>
                                       </TextBlock>
                                        <TextBlock Grid.Column="2" Grid.ColumnSpan="3"
                                            Grid.Row="8" Grid.RowSpan="2"
                                            Text="Số đã bán: "
                                            FontWeight="Normal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Foreground="#000000"
                                            FontSize="16">
                                            <TextBlock
                                                Text="{Binding Path=NumberSell}"
                                                FontWeight="DemiBold"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Foreground="#000000"
                                                Margin="0 4 0 0"
                                                FontSize="16"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="5" Grid.ColumnSpan="5"
                                            Grid.Row="4" Grid.RowSpan="3"
                                            Text="Nhà cung cấp: "
                                            FontWeight="Normal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Foreground="#000000"
                                            FontSize="16">
                                            <TextBlock
                                                Text ="{Binding Path=p.plant_supplier_name}"
                                                FontWeight="DemiBold"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Foreground="#000000"
                                                FontSize="16"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="5" Grid.ColumnSpan="2"
                                            Grid.Row="8" Grid.RowSpan="2"
                                            Text="Giá: "
                                            FontWeight="Normal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"                  
                                            Foreground="#000000" 
                                            FontSize="16">
                                            <TextBlock
                                                Text="{Binding Path=p.plant_price, StringFormat=N0}"
                                                FontWeight="DemiBold"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"                  
                                                Foreground="#000000"
                                                Margin="0 4 0 0"
                                                FontSize="16"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="5" Grid.ColumnSpan="3"
                                            Grid.Row="8" Grid.RowSpan="2"
                                            Text="/"
                                            FontWeight="Normal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"                  
                                            Foreground="#000000"
                                            Margin="-10 0 0 0"
                                            FontSize="16"/>
                                        <TextBlock Grid.Column="5" Grid.ColumnSpan="3"
                                            Grid.Row="8" Grid.RowSpan="3"
                                            Text="Cây"
                                            FontWeight="Normal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"                  
                                            Foreground="#5FAF57"
                                            Margin="30 -10 0 0"
                                            FontSize="16"/>
                                        <Button x:Name="btnEditInfo"
                                            Grid.Column="9" Grid.ColumnSpan="2"
                                            Grid.Row="1" Grid.RowSpan="4"
                                            Height="30" Width="30"
                                            Click="btnEditInfo_Click"
                                            Background="White"
                                            Tag="{Binding Path=p.plant_id}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Style>
                                            </Button.Style>
                                            <Button.Template>
                                                <ControlTemplate TargetType ="Button">
                                                    <Border    
                                                        Height="20"
                                                        Width="20"                                            
                                                        Background="{TemplateBinding Background}">
                                                        <Image Source="pack://application:,,,/Res/Icons/ic_edit.png"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <Button x:Name="btnAddToCart"
                                            Grid.Column="7" Grid.ColumnSpan="3"
                                            Grid.Row="7" Grid.RowSpan="4"
                                            Foreground="#5FAF57"
                                            FontWeight="Bold"
                                            FontSize="18"
                                            Click="btnAddToCart_Click"
                                            Tag="{Binding Path=p.plant_id}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="Thêm vào giỏ hàng"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Background" Value="White"/>
                                                </Style>
                                            </Button.Style>
                                            <Button.Template>
                                                <ControlTemplate TargetType ="Button">
                                                    <Border >
                                                        <ContentPresenter   
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <Grid/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <!--This item test for list-->
    </Grid>
</UserControl>
